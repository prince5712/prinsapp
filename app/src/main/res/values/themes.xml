<resources>
    <!-- Light theme -->
    <style name="App.Theme" parent="Theme.Prince">

    </style>

    <style name="Theme.Prince" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/gold</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Control and Activation Colors -->
        <item name="colorControlActivated">@color/pink</item>

        <!-- Status and Navigation Bar Colors -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@drawable/window_bg_light</item>

        <!-- Typography -->
        <item name="android:fontFamily">@font/prince</item>

        <item name="progressBackgroundColor">@color/pink</item>
        <item name="progressForegroundColor">@color/jet_dark</item>
        <item name="refreshLayoutBackground">@color/jet_white</item>

        <!-- Toolbar and Sidebar Colors -->
        <item name="toolbarColor">@color/black</item>
        <item name="toolbar_bg">@color/white</item>
        <item name="sidebar_bg">@drawable/sidebar_bg_light</item>
    </style>

    <!-- No ActionBar Theme -->
    <style name="Theme.Prince.NoActionBar" parent="Theme.Prince">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.Prince.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg_light</item>
    </style>

    <!-- Custom Dialog Style -->
    <style name="CustomDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/jet_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomNegativeButton</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="CustomPositiveButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="CustomNegativeButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/pink</item>
    </style>

    <!-- Overlays -->
    <style name="Theme.Prince.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>  <!-- or whatever color you want -->
        <item name="android:titleTextColor">@color/black</item> <!-- or whatever color you want -->
    </style>

    <style name="Theme.Prince.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">@color/white</item>
    </style>


</resources>
